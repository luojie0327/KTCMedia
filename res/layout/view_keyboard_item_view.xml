<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/keyboard_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/keyboard_select_point" />

        <RelativeLayout
            android:id="@+id/keyboard_item_text_container"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="13.3dp"
            android:layout_toEndOf="@id/keyboard_item_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/keyboard_item_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
                android:layout_centerInParent="true"
                android:textColor="@color/common_text_color"
                android:textSize="21.3sp" />

            <TextView
                android:id="@+id/keyboard_item_text_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/keyboard_item_text_first"
                android:layout_centerInParent="true"
                android:layout_marginTop="-8dp"
                android:textColor="@color/common_text_color"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>