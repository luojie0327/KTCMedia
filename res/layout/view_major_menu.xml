<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/major_menu_image"
        android:layout_width="26.7dp"
        android:layout_height="22.7dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="23dp" />

    <com.ktc.media.view.MarqueeTextView
        android:id="@+id/major_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/major_menu_image"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/major_menu_select_image"
        android:layout_width="10dp"
        android:layout_height="13.3dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6.7dp"
        android:src="@drawable/menu_major_select"
        android:visibility="gone" />
</RelativeLayout>